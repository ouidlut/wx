.gedan_item {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx;
}
.gedan_detail {
    width: 49%;
    height: 450rpx;
}
.gedan_item image {
    width: 100%;
    height: 300rpx;
}
.gedan_title {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.gedan_desc {
    height: 58rpx;
    font-size: 30rpx;
    color: #858585;
    line-height: 30rpx;
    overflow: hidden;
}