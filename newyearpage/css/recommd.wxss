.headView {
    flex: none;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin: 10rpx 0;
    height: 60rpx;
}
.headItem {
    text-align: center;
    position: relative;
    flex: auto;
    height: 60rpx;
}
.active:after {
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 5rpx;
    background-color: #be241c;
}
.swiImage {
    width: 100%;
}

.item_hot {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    flex-wrap: wrap-reverse;
}
.item_hot_item {
    width: 240rpx;
}
.ninePic {
    width: 240rpx;
    height: 240rpx;
}
