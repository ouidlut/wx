.section_rec {
    display:flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content:center;
    align-items: center;
    height: 140rpx;
    width: 100%;
    border-bottom: 1px solid #DCDCDC;
}
.rec_left {
    width: 20%;
}
.rec_right {
    width: 80%;
    height: 120rpx;
    position: absolute;
    margin-top: -90rpx;
    margin-left: 30rpx;
    right: 10rpx;
 }
.rec_left image {
    width: 120rpx;
    height: 120rpx;
    margin: 10rpx 10rpx;
}
.radioTitle {
    width: 240rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.radioType {
    text-align: center;
    color: #858585;
    font-size: 32rpx;
}