.separate {
  height: 15rpx;
  background-color: #f2f2f2;
}

.item {
  background-color: #fff;
  color: #787878;
  display: flex;
  align-items: center;
}

.flex-row image {
  width: 90%;
  height: 150rpx;
}
.flex-row{
  display: flex;
  flex-direction: row;

}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}
.flex-cell-Image{
  width: 250rpx;
  height: 200rpx;
  color: #ffffff;
  font-size: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.flex-cell-Text{
  width: 60%;
  height: 200rpx;
  color: #ffffff;
  font-size: 22rpx;
   
  display: flex;
  justify-content: center;
  align-items: center;
}